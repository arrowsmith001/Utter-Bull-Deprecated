<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->

    <!--top, dark, inner shadow-->
    <item
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#1A000000" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#4DFFFFFF" />
        </shape>
    </item>
<item>

<shape android:shape="rectangle">

    <gradient
        android:startColor="@color/colorPrimary"
        android:centerColor="@color/bg_edges_light"
        android:endColor="@color/bg_edges_light"
        android:angle="90"/>
    <padding android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="7dp" />
    <stroke
        android:width="5dip"
        android:color="#FFFFFF" />
    <corners android:radius= "8dp" />
</shape>

</item>
    </layer-list>
