        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#1A000000" />
        </shape>
    </item>

<item>

<shape android:shape="rectangle">

    <gradient
        android:startColor="@color/bg_edges_light"
        android:centerColor="@color/red"
