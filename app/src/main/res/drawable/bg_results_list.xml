<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->

    <!--bottom, light, outer glow-->
    <item
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#00FFFFFF" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#1A000000" />
        </shape>
    </item>

    <!--main bg-->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/bg_edges_light">
            </solid>
            <corners android:radius= "15dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <!--bottom light-->
            <gradient
                android:startColor="@color/colorPrimary"
                android:centerColor="@color/bg_edges_light"
                android:endColor="@color/bg_edges_light"
                android:angle="90"
                android:centerX="25%"/>
            <corners android:radius= "15dp" />
            <stroke android:color="@color/white"
                android:width="2dp"></stroke>
        </shape>
    </item>




</layer-list>
