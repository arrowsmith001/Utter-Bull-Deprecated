<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <solid
                android:color="#B2006860"
                ></solid>
            <corners
                android:radius="15dp"
                ></corners>
            <padding
                android:left="3dp"
                android:top="3dp">
            </padding>

        </shape>

    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <solid
                android:color="@color/true_blue"
                ></solid>
            <corners
                android:radius="10dp"
                ></corners>
            <stroke
                android:width="1dp"
                android:color="@color/text_shadow"
                ></stroke>
        </shape>
    </item>
</layer-list>