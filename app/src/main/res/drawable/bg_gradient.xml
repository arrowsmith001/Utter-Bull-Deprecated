<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ff3434"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="15%"
                android:startColor="@color/bg_edges_dark"
                android:centerColor="#ff3434"
                android:endColor="#00ff3434"
                android:angle="0"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <gradient
                android:type="linear"
                android:centerX="85%"
                android:startColor="#00ff3434"
                android:centerColor="#ff3434"
                android:endColor="@color/bg_edges_dark"
                android:angle="0"/>
        </shape>
    </item>
</layer-list>