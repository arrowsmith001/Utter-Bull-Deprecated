                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_spiny1" />

            <ImageView
                android:id="@+id/img_spiny_short"
                android:layout_width="213dp"
                android:layout_height="244dp"
                android:layout_gravity="start|center_vertical"
