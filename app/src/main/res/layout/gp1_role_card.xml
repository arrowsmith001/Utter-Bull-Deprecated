<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoleCard"
    android:layout_width="125dp"
    android:layout_height="200dp"
    android:alpha="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFront"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/role_card_front"
        android:backgroundTintMode="multiply"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutVictim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/text_role_corner_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_role_corner_1">

            <TextView
                android:id="@+id/text_role_card_victim"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/reveals_content_top_gradient"
                android:ellipsize="none"
                android:fontFamily="@font/lapsus_pro_bold"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="100"
                android:text="Alexander Arrowsmith"
                android:textColor="#000000"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_role_corner_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lapsus_pro_bold"
            android:paddingStart="8dp"
            android:text="BULL"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_role_corner_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lapsus_pro_bold"
            android:gravity="end"
            android:paddingEnd="8dp"
            android:text="BULL"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/role_card_back"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>