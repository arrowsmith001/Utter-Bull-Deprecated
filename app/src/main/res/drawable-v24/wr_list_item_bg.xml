<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ff3434"/>
            <size android:height="100dp"
                android:width="500dp"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="25%"
                android:startColor="@color/light_red"
                android:centerColor="#ff3434"
                android:endColor="#00ff3434"/>
            <size android:height="100dp"
                android:width="500dp"/>
        </shape>
    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <gradient
                android:type="linear"
                android:centerX="75%"
                android:startColor="#00ff3434"
                android:centerColor="#ff3434"
                android:endColor="@color/light_red"/>
            <size android:height="100dp"
                android:width="500dp"/>
        </shape>
    </item>
</layer-list>