<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <solid
                android:color="#979797"
                ></solid>
            <corners
                android:radius="15dp"
                ></corners>
            <padding
                android:left="3dp"
                android:top="3dp">
            </padding>

        </shape>

    </item>
    <item
        android:gravity="center">
        <shape android:shape="rectangle"
            >
            <gradient
                android:type="linear"
                android:centerX="50%"
                android:startColor="#D6D6D6"
                android:centerColor="#FFFFFF"
                android:endColor="#D6D6D6"
                android:angle="45"/>
            <corners
                android:radius="10dp"
                ></corners>
            <stroke
                android:width="1dp"
                android:color="@color/text_shadow"
                ></stroke>
        </shape>
    </item>
</layer-list>